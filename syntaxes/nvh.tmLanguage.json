{
  "scopeName": "text.nvh",
  "name": "NVH (Name-Value Hierarchy)",
  "patterns": [
    {
      "name": "comment.line.number-sign.nvh",
      "match": "\\s*#.*"
    },
    {
      "name": "meta.node.nvh",
      "match": "[ \\t]*([^:]+)(:)(.*)",
      "captures": {
        "1": {
          "name": "entity.name.tag.nvh"
        },
        "2": {
          "name": "punctuation.separator.node.nvh"
        },
        "3": {
          "name": "string.unquoted.value.nvh"
        }
      }
    }
  ]
}
